<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="otus-http-server" >
    <Properties>
        <Property name="basePath">logs</Property>
        <Property name="LOG_PATTERN_1">%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n</Property>
        <Property name="LOG_PATTERN_2">%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN_1}"/>
        </Console>
        <File name="FILE" fileName="${basePath}/log.log" append="true">
            <PatternLayout pattern="${LOG_PATTERN_2}"/>
        </File>
        <Async name="Async">
            <AppenderRef ref="FILE"/>
        </Async>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="Async" level="error"/>
        </Root>

    </Loggers>
</Configuration>